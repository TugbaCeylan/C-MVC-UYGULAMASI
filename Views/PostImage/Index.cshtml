@model IEnumerable<MVCOneMagic.Models.PostImage>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success btn-block" })</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post.Title)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Post.Title)
                </td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = item.ImageID }, new { @class = "btn btn-danger" }) </td>
                <td>@Html.ActionLink("Details", "Details", new { id = item.ImageID }, new { @class = "btn btn-danger" })</td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = item.ImageID }, new { @class = "btn btn-danger" })</td>

            </tr>
        }
    </tbody>

</table>
